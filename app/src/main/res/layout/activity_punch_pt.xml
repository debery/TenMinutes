<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.other.Punch_pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/left_arrow"
            android:layout_gravity="center_vertical"
            android:id="@+id/PTC_back"
            android:onClick="backmine"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习打卡"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="132dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        >

        <Button
            android:layout_width="161dp"
            android:layout_height="match_parent"
            android:background="@drawable/frame"
            android:text="我的学习"
            android:textColor="#00B9A8"></Button>
        <Button
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="学习目标"
            android:textColor="@color/white"
            android:background="#00B9A8"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="认证成功，打卡将会自动关联课外成绩"
            android:textColor="#C9C9C9"
            ></TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="233dp"
        android:layout_height="233dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular"
            ></ImageView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="本月目标"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/number"
            android:text="0"
            android:textSize="40dp"
            android:textColor="#1BBE85"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:text="学期目标次数:35"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/monday"
            android:layout_marginLeft="10dp"
            android:id="@+id/monday"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/tuesday"
            android:id="@+id/tuesday"
            android:layout_marginLeft="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/wednesday"
            android:id="@+id/wednesday"
            android:layout_marginLeft="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/thursday"
            android:id="@+id/thursday"
            android:layout_marginLeft="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/friday"
            android:id="@+id/friday"
            android:layout_marginLeft="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/staurday"
            android:id="@+id/staurday"
            android:layout_marginLeft="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/sunday"
            android:id="@+id/sunday"
            android:layout_marginLeft="30dp"
            ></ImageView>
    </LinearLayout>

    <Button
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:background="@drawable/go_publish"></Button>

</LinearLayout>